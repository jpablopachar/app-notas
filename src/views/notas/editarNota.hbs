<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edita nota</h3>
    </div>
    <div class="card-body">
      <form action="/notas/editarNota/{{ nota._id }}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group"><input type="text" name="titulo" class="form-control" value="{{ nota.titulo }}" autofocus></div>
        <div class="form-group"><textarea name="descripcion" class="form-control">{{ nota.descripcion }}</textarea></div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Editar</button></div>
      </form>
    </div>
  </div>
</div>